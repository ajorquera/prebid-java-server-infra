# Failover Configuration Example
# Copy this file to terraform.tfvars and update the values

aws_region = "us-east-1"
project_name = "prebid-server"

# Domain Configuration (optional)
# Leave domain_name empty if you don't want to configure DNS failover
domain_name = ""  # e.g., "example.com"
subdomain   = ""  # e.g., "api" for api.example.com

# GCP Cloud Run URL (get this from GCP deployment output)
# Remove https:// prefix
gcp_cloudrun_url = ""  # e.g., "prebid-server-xxxxx.run.app"

# Health Check
health_check_path = "/status"
