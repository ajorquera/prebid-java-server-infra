# GCP Configuration Example
# Copy this file to terraform.tfvars and update the values

gcp_project_id = "your-gcp-project-id"
gcp_region     = "us-central1"
project_name   = "prebid-server"
environment    = "prod"

# Container Configuration
# Use official Prebid Server Java image or your custom build
container_image = "prebid/prebid-server-java:latest"  # Or use your GCR: gcr.io/your-gcp-project-id/prebid-server-java:latest
container_port  = 8080

# Resource Limits
cpu_limit    = "2"
memory_limit = "2Gi"

# Scaling Configuration
min_instances = "1"
max_instances = "10"

# Performance
container_concurrency = 80
timeout_seconds       = 300

# Health Check
health_check_path = "/status"

# Access Control
allow_public_access = true
